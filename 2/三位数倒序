#include <stdio.h>

int main(int argc, char **argv) {
    int n, a, b, c;
    scanf("%d", &n);
    a = n / 100;                   // 取余取模运算是分离不同位数字的基本方法 
    b = n % 100 / 10;
    c = n % 100 % 10;
    printf("%d", c*100+b*10+a);

    return 0;
}
/* 注释块
    printf("%d", c*100+b*10+a);    // 可以免去判断最高位是0的步骤
注释到此 */
